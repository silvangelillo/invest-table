# ============================================================
# InvestTable — Environment Variables
# Copy this to .env.local and fill in your values
# Add these same variables in Vercel → Settings → Environment Variables
# ============================================================

# Supabase (get from supabase.com → Project → Settings → API)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Stripe (get from dashboard.stripe.com → Developers → API Keys)
STRIPE_SECRET_KEY=sk_live_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs (create in Stripe Dashboard → Products)
STRIPE_INVESTOR_PLUS_PRICE_ID=price_...
STRIPE_INVESTOR_PRO_PRICE_ID=price_...
STRIPE_STARTUP_PLUS_PRICE_ID=price_...
STRIPE_STARTUP_ULTRA_PRICE_ID=price_...

# App URL
NEXT_PUBLIC_APP_URL=https://your-vercel-url.vercel.app
